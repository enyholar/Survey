<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  app:layout_behavior="@string/appbar_scrolling_view_behavior"
  tools:context=".feature.home.SummarySurveyDetailsActivity"
  tools:showIn="@layout/activity_summary_survey_details">

  <android.support.v7.widget.AppCompatTextView
    android:id="@+id/txt_details_family_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

  <android.support.v7.widget.AppCompatTextView
    android:id="@+id/txt_details_date_visited"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>


  <android.support.v7.widget.AppCompatTextView
    android:id="@+id/txt_details_address"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

  <android.support.v7.widget.AppCompatTextView
    android:id="@+id/txt_details_volunteer_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

  <android.support.v7.widget.AppCompatTextView
    android:id="@+id/txt_details_person_interview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

  <android.support.v7.widget.AppCompatTextView
    android:id="@+id/txt_details_member_number"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

  <android.support.v7.widget.AppCompatTextView
    android:id="@+id/txt_details_member_family"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

  <android.support.v7.widget.AppCompatTextView
    android:id="@+id/txt_details_cattled_owned"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

  <android.support.v7.widget.AppCompatTextView
    android:id="@+id/txt_details_cattle_milked"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

  <android.support.v7.widget.AppCompatTextView
    android:id="@+id/txt_details_cattle_heifer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
</LinearLayout>